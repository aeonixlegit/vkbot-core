{
  "name": "vkbot-core",
  "version": "0.0.1",
  "description": "Ядро для модульного бота ВКонтакте на основе 'vk-io'.",
  "main": "start.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development DEBUG=vkbot-core:* node --nolazy --inspect start.js",
    "start": "cross-env NODE_ENV=production node start.js",
